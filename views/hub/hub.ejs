		                 <!-- <img src="/app/img/no-image.png" > -->
		        			<% }else{  %>
		        			 <img style="background-color: #666; height: 60px; width: 60px;     border: 3px solid #000;" >
		        				 <!-- <img src="/app/img/no-image.png" > -->
		        			<% }  %>
		        			</a>
		                
		                </div>
		                <div style="float: left; margin-left: 5px; width: 60%;">
		                	<p class="title-info"  ><a href="/hub/<%= hub._id %>/person/<%= person._id %>"><%= person.title  %> <%= person.first_name  %> <%= person.middle_name  %> <%= person.last_name  %> <%= person.suffix  %></a><br>
		                  	<!-- <span class="date-small"  > <span data-livestamp="<%= person.update_date %>"> </span> <%= person.update_date %></span>   -->
		                	</p>

		             
		                </div>
		            </li>

                <% }) %>



