      <div class="row hub">

          <div class="four columns">
            <div class="content-box">
            	<p class="up-title" >add a person:</p>
            	<a  class="button button-primary" href="/hub/<%= hub.id %>/add_person">+ add person</a>
              <% if(persons.length > 0){ %>
          		<hr>


            
              <p class="up-title" >Recently Updated People:</p>
              <div class="list-content">
                <ul>


                <% persons.forEach(function(person){ %>
   
		            <li style="list-style: none;">
		                <div style="width: 68px; float: left;">
		                	<a href="/hub/<%= hub._id %>/person/<%= person._id %>">
		                    <%  if(person.img_foldername && person.img_thumbnail){ %>
