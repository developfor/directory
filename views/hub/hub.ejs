      <div class="bread-crumbs">
        <div id="profile-content">
          <img id="profile-thumb" src="/app/img/no-image.png">
          <div id="profile-username">
            <%= user.username %>
          </div>
        </div>
        <div> 
         <a href="/@/<%= user.username %>/">Hub</a>|<a href="/@/<%= user.username %>/persons">People</a>|<a href="/@/<%= user.username %>/groups">Groups</a>|<a href="/@/<%= user.username %>/events">Events</a> 
        </div>            
      </div>
      <div class="row hub">

          <div class="four columns">
            <div class="content-box">
            	<p class="up-title" >add a person:</p>
            	<a  class="button button-primary" href="/@/<%= user.username %>/add_person">+ add person</a>
              <% if(persons.length > 0){ %>
          		<hr>


            
              <p class="up-title" >Recently Updated People:</p>
              <div class="list-content">
                <ul>


                <% persons.forEach(function(person){ %>
		            <li>
                  <a href="/@/<%= user.username %>/person/<%= person._id %>"  > 
                    <div class="list-area">
      		                <div class="image-block">
      		              <%  if(person.img_foldername && person.img_thumbnail){ %>
      		        				  <img src="/uploads/img/<%= person.img_foldername %>/<%=  person.img_icon  %>"> 
      		        			<% }else{  %>
      		        			 <img style="background-color: #<%= person.hex_color %>;" src="/app/img/no-image.png" >
      		        			<% }  %>
      		                
      		                </div>
      		                <div class="list-text-block">
      		                	<p class="title-info"  ><span><%= person.title  %> <%= person.first_name  %> <%= person.middle_name  %> <%= person.last_name  %> <%= person.suffix %></span>		                  	
      		                	</p>
      		                </div>
                     </div>
                  </a>

		            </li>
             
                <% }) %>



                </ul>
              </div>
              

              <a class="button button-primary" href="/@/<%= user.username %>/persons">view all people</a><br>
              <% } %>

            </div>
         </div>





 		<div class="four columns">
            <div class="content-box">
            	<p class="up-title" >add a group:</p>
            	 <a  class="button button-primary" href="/@/<%= user.username %>/add_group">+ add group</a>
              <% if(groups.length > 0){ %>
        			<hr>

              <p class="up-title" >recently updated groups:</p>
              <div class="list-content">
                <ul>



                <% groups.forEach(function(group){ %>
                  <li>
                    <a href="/@/<%= user.username %>/group/<%= group._id %>"  > 
                      <div class="list-area">
                            <div class="image-block">
                          <%  if(group.img_foldername && group.img_thumbnail){ %>
                              <img src="/uploads/img/<%= group.img_foldername %>/<%=  group.img_icon  %>"> 
                          <% }else{  %>
                           <img style="background-color: #<%= group.hex_color %>;" src="/app/img/no-image.png" >
                          <% }  %>
                            
                            </div>
                            <div class="list-text-block">
                              <p class="title-info"  ><span><%= group.title  %> <%= group.first_name  %> <%= group.middle_name  %> <%= group.last_name  %> <%= group.suffix %></span>                      
                              </p>
                            </div>
                       </div>
                    </a>

                  </li> 
                <% }) %>

                </ul>
              </div>
              
              <a class="button button-primary" href="/@/<%= user.username %>/groups">view all groups</a><br>
             <% } %>
            </div>
          </div>

           <div class="four columns">
            <div class="content-box">
            	<p class="up-title" >add an event:</p>
            	 <a  class="button button-primary" href="/@/<%= user.username %>/add_event">+ add event</a>

              <% if(events.length > 0){ %>
              <hr>
              <p class="up-title" >recently updated events:</p>
              <div class="list-content">
                <ul>



				 <% events.forEach(function(event){ %>
   
                  <li style="list-style: none;">
                <!--     <div style="width: 68px; float: left;">

	                    
	        			 <img style="background-color: #666; height: 60px; width: 60px;" >
	        				
                    
                    </div> -->
                    <div style="float: left; width: 60%;">
                      <p class="title-info"  ><a href="/@/<%= user.username %>/event/<%= event._id %>"> <%= event.title  %> </a><br>
  
                      </p>

                 
                    </div>
                  </li>

                  <% }) %>


                   


                </ul>
              </div>

               <a class="button button-primary" href="/@/<%= user.username %>/events">view all events</a><br>
                  <% } %>
            </div>
          </div>

          




