<% include ../_partials/header %>

 <% include ../person/_partials/profile_left.ejs %>


          <div class="eight columns">
            <div class="nav-right">
              <ul>
                <li> 
                  <b>person:</b>
                </li>
                <li>
                    <a class="no-style-link" href="/@/<%= user.username %>/person/<%= person._id %>">description</a>
                </li>
                <li>
                    <a class="no-style-link selected" href="/@/<%= user.username %>/person/<%= person._id %>/info">information</a>
                </li>
                <li>
                     <a class="no-style-link" href="/@/<%= user.username %>/person/<%= person._id %>/groups">groups</a>
                </li>
                 
              </ul>
              
            </div>
             <div>
           <!--  <div id="i"> -->
              <span class="title-info">Full Name:</span>
              <p><%= person.title %> <%= person.first_name %> <%= person.middle_name %> <%= person.last_name %> <%= person.suffix %></p>


              <% if(person.job_title){ %>
	              <span class="title-info">Job Title:</span>
	              <p><%= person.job_title %></p>
              <% } %>

              <% if( isNaN( new Date( person.birthday))  === false){ %>
	              <span class="title-info">Birthday:</span>
	              <p><%= person.birthday %></p>
	             <% } %>


              <% if( isNaN( new Date( person.birthday))  === false){ %>
                <span class="title-info">Age:</span>
                <p><%=  person.age %></p>
              <% } %>


	          <% if(person.email){ %>
	              <span class="title-info">Email:</span>
	              <p><a href="mailto:<%= person.email %>"><%= person.email %></a></p>
              <% } %>


              <% if(person.primary_phone){ %>
	              <span class="title-info">Primary Phone:</span>
	              <p><%= person.primary_phone %></p>
              <% } %>

              <% if(person.mobile_phone){ %>
	              <span class="title-info">Mobile Phone:</span>
	              <p><%= person.mobile_phone %></p>
              <% } %>

               <% if(person.fax){ %>
	              <span class="title-info">Fax:</span>
	              <p><%= person.fax %></p>
              <% } %>

      			  <% if(person.address.isEmpty() === false){ %>
	              <span class="title-info">Location:</span>
	              <p><%= person.address %></p>
              <% } %>

              <% if(person.web_address){ %>
	              <span class="title-info">Web Address:</span>
	              <p><a href="<%=  person.web_address %>" target="_blank"> <%= person.web_address %> </a></p>
              <% } %>

            
              
            </div>
          </div>





      <!--  end row  -->
        </div>
    <!--  end container -->
    </div>


    <script>

      $("#button-profile-delete").on("click", function(){
         
          if (confirm("Are you sure you want to delete this entry?") == true) {

              var deletePath = $(this).attr('data-delete-path');
              var redirectPath = $(this).attr('data-redirect-path');
          
              $.post(deletePath, function() {
                window.location.href = redirectPath;
              });
          } else {
              return false;
          }

      })
    </script>


