		  				<p> <b> No entries. </b> </p>
			            
			         

			           </div>
	          </div>
		  <%  } %>

		<% groups.forEach(function(group){ %>


 
		

			<div class="p-content">
				<a href="/@/<%= user.username %>/group/<%= group._id %>">
